<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <hr>
        <h1 class="text-center">Perguntas</h1>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.title %></h3>
                </div>
                <div class="card-footer">
                        <a class="btn btn-primary" href="/ask/<%=pergunta.id %>" style="color: white; text-decoration: none;">Responder</a>
                </div>
            </div>
        <% }) %>
    </div>

</body>
<%- include('partials/footer') %>